<%= form_with(model: @portfolio_items) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :title, class: 'form-label' %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= form.label :subtitle, class: 'form-label' %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :body, class: 'form-label' %>
        <%= form.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>
  </div>
  <hr>
  <div class="col-md-6">
    <h2> Technologies Used: <h2/>
      <div>
        <%= form.fields_for :technologies do |technology_form|  %>
          <div class="mb-3">
            <%= technology_form.label :name, class: 'form-label' %>
            <%= technology_form.text_field :name, class: 'form-control' %>
          </div>
        <% end %>
      </div>
      <div class="mb-3">
        <%= form.submit "Save Portfolio Item", class:'btn btn-primary' %>
      </div>
    </div>
  <% end %>
